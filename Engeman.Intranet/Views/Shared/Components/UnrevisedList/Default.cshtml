@model UserAccount

@{
  Layout = null;
}

<li class="all-posts">
  <a href="@Url.Action("listall","posts", new {filter="allPosts" })">
    <i class="icon-angle-right"></i>Listar
  </a>
</li>
@if (Model.Moderator == true && @ViewBag.UnrevisedPosts > 0)
{
  <li class="unrevised-posts">
    <a href="@Url.Action("listall","posts", new {filter="unrevisedPosts" })">
      <i class="icon-angle-right"></i>Postagens não revisadas
      <span style="background: salmon;" class="badge pull-right">
        @ViewBag.UnrevisedPosts
      </span>
    </a>
  </li>
}
@if (Model.Moderator == true && @ViewBag.UnrevisedComments > 0)
{
  <li class="unrevised-comments">
    <a href="@Url.Action("listall","posts", new {filter="unrevisedComments" })">
      <i class="icon-angle-right"></i>Comentários não revisados
      <span style="background: salmon;" class="badge pull-right">
        @ViewBag.UnrevisedComments
      </span>
    </a>
  </li>
}

