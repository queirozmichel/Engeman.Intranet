@model Engeman.Intranet.Models.AskQuestionDto;
@{List<Department> departments = ViewBag.Departments;}

<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  @*Inicializa o Spinner*@
  <script>startSpinner();</script>
  @*CSS*@
  <link rel="stylesheet" href="~/css/new-question.css" />
  @*JavasScript*@
  <script type="text/javascript" src="~/js/custom.js"></script>
</head>

<body>
  <div class="body-content">
    <!--=== Page Header ===-->
    <div class="page-header">
      <div class="page-title">
        <h3>Pergunta</h3>
        <span>Good morning, John!</span>
      </div>
      <!-- Page Stats -->
      <ul class="page-stats">
        <li>
          <div class="summary">
            <span>New orders</span>
            <h3>17,561</h3>
          </div>
          <div id="sparkline-bar" class="graph sparkline hidden-xs">20,15,8,50,20,40,20,30,20,15,30,20,25,20</div>
          <!-- Use instead of sparkline e.g. this:
          <div class="graph circular-chart" data-percent="73">73%</div>
          -->
        </li>
        <li>
          <div class="summary">
            <span>My balance</span>
            <h3>$21,561.21</h3>
          </div>
          <div id="sparkline-bar2" class="graph sparkline hidden-xs">20,15,8,50,20,40,20,30,20,15,30,20,25,20</div>
        </li>
      </ul>
      <!-- /Page Stats -->
    </div>
    <!-- /Page Header -->
    <!--=== Page Content ===-->
    <div class="row">
      <!--=== Horizontal Forms ===-->
      <div class="col-md-12">
        <div class="widget box">
          <div class="widget-header">
            <h4><i class="icon-reorder"></i>Nova Pergunta</h4>
          </div>
          <div class="widget-content">
            <form class="form-horizontal row-border" id="ask-form" method="post">
              <div class="form-group">
                <label class="col-md-2 control-label">Restrita ao setor?<span class="required">*</span></label>
                <div class="col-md-10">
                  <input type="checkbox" id="restricted" name="CheckIsRestricted" asp-for="@Model.CheckIsRestricted">
                </div>
              </div>
              <div class="form-group departments-list">
                <label class="col-md-2 control-label">Setores<span class="required">*</span></label>
                <div class="col-md-10">
                  <select class=" required" id="multiselect-department" multiple="multiple" asp-for="@Model.DepartmentsList" name="DepartmentsList">
                    @{if (departments != null)
                      {
                        for (int i = 0; i < departments.Count; i++)
                        {
                          <option value="@departments[i].Id">@departments[i].Description</option>
                        }
                      }
                    }
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="col-md-2 control-label">Assunto<span class="required">*</span></label>
                <div class="col-md-10">
                  <input class="form-control required" id="subject" asp-for="@Model.Subject" type="text" name="subject">
                </div>
              </div>
              <div class="form-group">
                <label class="col-md-2 control-label">Palavras chave</label>
                <div class="col-md-10">
                  <input id="keywords" class="tags" asp-for="@Model.Keywords" type="text" name="keywords">
                </div>
              </div>
              <div class="form-group">
                <label class="col-md-2 control-label">Pergunta<span class="required">*</span></label>
                <div class="col-md-10">
                  <textarea class="form-control required" id="description" rows="3" cols="5" asp-for="@Model.Description" name="description"></textarea>
                </div>
              </div>
              <div class="form-actions">
                <button class="btn btn-primary pull-right" id="submit-button" type="submit">Salvar</button>
                <a class="btn pull-left back-to-list-button">Voltar para a lista</a>
              </div>
            </form>
          </div>
        </div>
      </div>
      <!-- /Horizontal Forms -->
    </div>
    <!-- /Page Content -->
  </div>
</body>

</html>

<script type="text/javascript" src="~/js//new-question.js"></script>
