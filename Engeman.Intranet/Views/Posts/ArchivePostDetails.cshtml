@model Archive;

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport"
        content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0" />

  <script type="text/javascript" src="~/plugins/typeahead/typeahead.min.js"></script> <!-- AutoComplete -->
  <script type="text/javascript" src="~/plugins/autosize/jquery.autosize.min.js"></script>
  <script type="text/javascript" src="~/plugins/inputlimiter/jquery.inputlimiter.min.js"></script>
  <script type="text/javascript" src="~/plugins/uniform/jquery.uniform.min.js"></script>
  <!-- Styled radio and checkboxes -->
  <script type="text/javascript" src="~/plugins/tagsinput/jquery.tagsinput.min.js"></script>
  <script type="text/javascript" src="~/plugins/select2/select2.min.js"></script> <!-- Styled select boxes -->
  <script type="text/javascript" src="~/plugins/fileinput/fileinput.js"></script>
  <script type="text/javascript" src="~/plugins/duallistbox/jquery.duallistbox.min.js"></script>
  <script type="text/javascript" src="~/plugins/bootstrap-inputmask/jquery.inputmask.min.js"></script>
  <script type="text/javascript" src="~/plugins/bootstrap-wysihtml5/wysihtml5.min.js"></script>
  <script type="text/javascript" src="~/plugins/bootstrap-wysihtml5/bootstrap-wysihtml5.min.js"></script>
  <script type="text/javascript" src="~/plugins/bootstrap-multiselect/bootstrap-multiselect.min.js"></script>
  <script type="text/javascript" src="~/plugins/bootstrap-switch/bootstrap-switch.min.js"></script>

  <!-- Demo JS -->
  <script type="text/javascript" src="~/js/custom.js"></script>

</head>

<body>
  <div id="container">
    <!--=== Page Header ===-->
    <div class="page-header">
      <div class="page-title">
        <h3>Detalhes da Postagem</h3>
        <span>Good morning, John!</span>
      </div>

      <!-- Page Stats -->
      <ul class="page-stats">
        <li>
          <div class="summary">
            <span>New orders</span>
            <h3>17,561</h3>
          </div>
          <div id="sparkline-bar" class="graph sparkline hidden-xs">20,15,8,50,20,40,20,30,20,15,30,20,25,20</div>
          <!-- Use instead of sparkline e.g. this:
          <div class="graph circular-chart" data-percent="73">73%</div>
          -->
        </li>
        <li>
          <div class="summary">
            <span>My balance</span>
            <h3>$21,561.21</h3>
          </div>
          <div id="sparkline-bar2" class="graph sparkline hidden-xs">20,15,8,50,20,40,20,30,20,15,30,20,25,20</div>
        </li>
      </ul>
      <!-- /Page Stats -->
    </div>
    <!-- /Page Header -->
    <!--=== Page Content ===-->
    <div class="row">
      <!--=== Horizontal Forms ===-->
      <div class="col-md-12">
        <div class="widget box">
          <div class="widget-header">
            <h4><i class="icon-reorder"></i> Arquivo</h4>
          </div>
          <div class="widget-content">
            <form class="form-horizontal row-border" id="ask-form" method="post">
              <div class="form-group">
                <label class="col-md-2 control-label">Id:</label>
                <div class="col-md-1">
                  <input class="form-control" type="text" readonly value="@ViewBag.Post.Id" />
                </div>
              </div>
              <div class="form-group">
                <label class="col-md-2 control-label">Data e hora:</label>
                <div class="col-md-2">
                  <input class="form-control" type="text" value="@ViewBag.Post.ChangeDate" readonly>
                </div>
              </div>
              <div class="form-group">
                <label class="col-md-2 control-label">Tipo de arquivo: </label>
                <div class="col-md-3">
                  <label class="radio">
                    @Html.RadioButtonFor(model => model.ArchiveType, "D", new { @disabled = true })
                    Documento
                  </label>
                  <label class="radio">
                    @Html.RadioButtonFor(model => model.ArchiveType, "M", new { @disabled = true })
                    Manual
                  </label>
                </div>
              </div>
              <div class="form-group">
                <label class="col-md-2 control-label">Nome do arquivo:</label>
                <div class="col-md-10">
                  <input readonly class="form-control" type="text" value="@ViewBag.Archive.Name">
                </div>
              </div>              
              <div class="form-group">
                <label class="col-md-2 control-label">Descrição:</label>
                <div class="col-md-10">
                  <textarea class="form-control" rows="3" cols="5" readonly>@ViewBag.Post.Description</textarea>
                </div>
              </div>
              <div class="form-actions">
              </div>
            </form>
          </div>
        </div>

        <div class="widget box">
          <div class="widget-header">
            <h4><i class="icon-reorder"></i> Responsável pelo arquivo</h4>
          </div>
          <div class="widget-content">
            <form class="form-horizontal row-border" id="ask-form" method="post">
              <div class="form-group">
                <label class="col-md-2 control-label">Id:</label>
                <div class="col-md-1">
                  <input id="id-user-account" class="form-control" name="idUserAccount" type="text" value="@ViewBag.Post.UserAccountId" readonly />
                </div>
              </div>
              <div class="form-group">
                <label class="col-md-2 control-label">Nome de usuário:</label>
                <div class="col-md-2">
                  <input id="name-user-account" class="form-control" name="nameUserAccount" type="text" value="@ViewBag.UserAccount.Name" readonly />
                </div>
                <label class="col-md-2 control-label">Usuário de domínio:</label>
                <div class="col-md-2">
                  <input id="domain-user-account" class="form-control" name="domainUserAccount" type="text" value="@ViewBag.UserAccount.DomainAccount" readonly />
                </div>
                <label class="col-md-1 control-label">Email:</label>
                <div class="col-md-3">
                  <input readonly class="form-control" id="email-user-account" type="text" name="emailUserAccount" value="@ViewBag.UserAccount.Email">
                </div>
              </div>
              <div class="form-group">
                <label class="col-md-2 control-label">Setor:</label>
                <div class="col-md-3">
                  <input id="department-user" class="form-control" name="departmentUserAccount" type="text" value="@ViewBag.Department.Description" readonly />
                </div>
              </div>
              <div class="form-group">
                <label class="col-md-2 control-label">Autodescrição:</label>
                <div class="col-md-10">
                  <textarea class="form-control" id="description-user-account" rows="3" cols="5" name="descriptionUserAccount" readonly>@ViewBag.UserAccount.Description</textarea>
                </div>
              </div>
              <div class="form-actions">
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>

<script type="text/javascript" src="~/js/archivepostdetails.js"></script>