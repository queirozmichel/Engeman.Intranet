<head>
  <!-- DataTables -->
  <script type="text/javascript" src="~/plugins/datatables/jquery.dataTables.min.js"></script>
  <script type="text/javascript" src="~/plugins/datatables/tabletools/TableTools.min.js"></script> <!-- optional -->
  <script type="text/javascript" src="~/plugins/datatables/colvis/ColVis.min.js"></script> <!-- optional -->
  <script type="text/javascript" src="~/plugins/datatables/columnfilter/jquery.dataTables.columnFilter.js"></script>
  <!-- optional -->
  <script type="text/javascript" src="~/plugins/datatables/DT_bootstrap.js"></script>

  @*CSS*@
  <link rel="stylesheet" href="~/css/listall.css" />

  @*Bootgrid*@
  <link rel="stylesheet" href="~/lib/bootgrid/jquery.bootgrid.css">
  <script src="~/lib/bootgrid/jquery.bootgrid.js"></script>

  @*Spinner*@
  <link rel="stylesheet" href="~/lib/spinner/jquery.loadingModal.css" />
  <script src="~/lib/spinner/jquery.loadingModal.js"></script>

  <!-- Demo JS -->
  <script type="text/javascript" src="~/js/custom.js"></script>

  @*Jquery-UI*@
  <script type="text/javascript" src="~/lib/jquery-ui/jquery-ui.min.js"></script>
  <link rel="stylesheet" type="text/css" href="~/lib/jquery-ui/jquery-ui.min.css" />
  <link href="~/lib/jquery-ui/jquery-ui.structure.min.css" rel="stylesheet" />
  <link href="~/lib/jquery-ui/jquery-ui.theme.min.css" rel="stylesheet" />
</head>

<body>
  <div id="question-details">
    <div class="page-header">
      <div class="page-title">
        <h3>Postagens</h3>
        @*<span>Good morning, John!</span>*@
      </div>

      <!-- Page Stats -->
      <ul class="page-stats">
        <li>
          <div class="summary">
            <span>New orders</span>
            <h3>17,561</h3>
          </div>
          <div id="sparkline-bar" class="graph sparkline hidden-xs">20,15,8,50,20,40,20,30,20,15,30,20,25,20</div>
          <!-- Use instead of sparkline e.g. this:
          <div class="graph circular-chart" data-percent="73">73%</div>
          -->
        </li>
        <li>
          <div class="summary">
            <span>My balance</span>
            <h3>$21,561.21</h3>
          </div>
          <div id="sparkline-bar2" class="graph sparkline hidden-xs">20,15,8,50,20,40,20,30,20,15,30,20,25,20</div>
        </li>
      </ul>
      <!-- /Page Stats -->
    </div>


    @*modal de confirmação ao tentar apagar uma postagem*@
    <div data-backdrop="true" id="confirm-modal" class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-sm">
        <div class="modal-content">
          <div class="modal-title"><h5>Apagar a postagem?</h5></div>
          <div class="modal-footer">
            <button id="confirm-delete" type="button" class="btn btn-success">Sim</button>
            <button id="cancel-delete" type="button" class="btn btn-danger">Não</button>
          </div>
        </div>
      </div>
    </div>

    @*modal de restrição ao tentar apagar uma postagem*@
    <div data-backdrop="true" id="restricted-modal" class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-sm">
        <div class="modal-content">
          <div class="modal-title"><h5>Operação não suportada</h5></div>
          <div class="modal-footer">
            Você não pode apagar uma postagem de outra pessoa.
          </div>
        </div>
      </div>
    </div>

    <table id="post-grid" class="table table-condensed table-hover table-striped">
      <thead>
        <tr>
          <th data-column-id="id" data-width="4%" data-order="asc" data-formatter="id">Id</th>
          <th data-column-id="userAccountName" data-width="10%" data-formatter="userAccountName">Nome</th>
          <th data-column-id="departmentDescription" data-width="13%" data-formatter="departmentDescription">
            Setor
          </th>
          <th data-column-id="subject" data-width="15%" data-formatter="subject">Assunto</th>
          <th data-column-id="cleanDescription" data-width="32%" data-formatter="cleanDescription">Descrição</th>
          <th data-column-id="changeDate" data-width="12%" data-formatter="changeDate">Data</th>
          <th data-column-id="action" data-width="10%" data-formatter="action">Ações</th>
        </tr>
      </thead>
    </table>
  </div>
</body>

<script src="~/js/listall.js"></script>














